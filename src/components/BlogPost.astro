---
const { post } = Astro.props;
---

<a href={`/blog/${post.slug}`} class="group relative overflow-hidden rounded-2xl bg-gradient-to-br from-gray-800 to-gray-900 border border-gray-700 transition-all duration-500 hover:border-cyan-400">
    <div class="absolute inset-0 bg-gradient-to-t from-black/80 to-transparent opacity-0 group-hover:opacity-40 transition-opacity duration-500 z-10"></div>
    
    <div class="relative h-64 overflow-hidden">
      <img src={post.image || '/placeholder.svg'} alt={post.title} class="object-cover transition-transform duration-700 group-hover:scale-110 w-full h-full" />
    </div>
  
    <div class="p-8 relative">
      <div class="mb-3">
        <span class="text-sm font-medium tracking-wider text-cyan-400 uppercase">{post.author_name}</span>
      </div>
      
    <h2 class="text-xl font-bold mb-4 text-white group-hover:text-cyan-300 transition-colors duration-300 line-clamp-3">
      {post.title}
    </h2>
  
      <p class="text-gray-300 mb-6 line-clamp-3">{post.description}</p>
  
      <span class="inline-flex items-center px-5 py-2.5 rounded-full bg-gradient-to-r from-cyan-500 to-blue-600 text-white font-medium transition-all duration-300 hover:from-cyan-400 hover:to-blue-500 hover:shadow-lg hover:shadow-cyan-500/30">
        Ver m√°s
        <svg class="w-4 h-4 ml-2 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path strokeLinecap="round" strokeLinejoin="round" strokeWidth="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
        </svg>
      </span>
    </div>
  </a>